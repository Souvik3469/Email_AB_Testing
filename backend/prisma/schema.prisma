generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

model User {
    id          String       @id @default(auto()) @map("_id") @db.ObjectId
    name        String
    email       String       @unique
    password    String
    experiments Experiment[]
    variants    Variant[]
}

model Experiment {
    id       String    @id @default(auto()) @map("_id") @db.ObjectId
    name     String
    variants Variant[]
    user     User      @relation(fields: [userId], references: [id])
    userId   String    @db.ObjectId
}

model Variant {
    id           String     @id @default(auto()) @map("_id") @db.ObjectId
    experiment   Experiment @relation(fields: [experimentId], references: [id])
    experimentId String     @db.ObjectId
    subject      String
    sender       String
    contentLine1 String
    contentLine2 String
    sentAt       DateTime?
    clicked      Boolean?
    linkClicked  String?
    user         User       @relation(fields: [userId], references: [id])
    userId       String     @db.ObjectId
}
